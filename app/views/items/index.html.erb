<div id="topbar">
  <p>Utilize sua conta do facebook para reservar seu presente: <%= link_to image_tag("connect.gif"), user_omniauth_authorize_path(:facebook) %></p>
</div>

<div id="wrapper">
  <div id="page">
  <h1>Ch√° de Casa Nova</h1>
    <ul>
      <% @available_items.each do |item| %>
        <li>
          <strong><%= item.title %></strong>
          <%= link_to raw("<span class='leftarrow icon'></span>Reservar"), "#", :class => "positive button" %>
        </li>
      <% end %>
    </ul>
    <hr/><br/>
    <h2>Reservados</h2>
    <ol>
      <% @reserved_items.each do |item| %>
        <li>
          <em><%= item.title %></em>
          <%= link_to raw("<span class='cross icon'></span>Cancelar"), "#", :class => "negative button" %>
        </li>
      <% end %>
    </ol>
  </div>
</div>
